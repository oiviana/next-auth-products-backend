{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@plugins/*": ["./src/plugins/*"],
      "@routes/*": ["./src/routes/*"],
      "@lib/*": ["./src/lib/*"],
      "@services/*": ["./src/services/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@utils/*": ["./src/utils/*"],
      "@prisma-generated/*": ["./prisma/generated/*"],
      "@schemas/*": ["./src/schemas/*"],
       "@prisma/client": ["./node_modules/@prisma/client"]
    }
  },
  "include": ["src", "../web/src/types/product.d.ts"]
}